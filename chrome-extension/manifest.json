{
  "name": "StudyBuddy Canvas Injector",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Inject a StudyBuddy link into Canvas and swap in our custom layout on demand.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.instructure.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "studybuddy-icon.svg",
        "Canvas-Layout.html",
        "Canvas-CSS.css"
      ],
      "matches": [
        "*://*.instructure.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*.instructure.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
